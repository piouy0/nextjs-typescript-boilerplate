{
  "compilerOptions": {
    "target": "ES2019",
    "noImplicitAny": false,
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2019"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "incremental": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*"
  ]
}
